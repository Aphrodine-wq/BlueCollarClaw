{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/src/server.js"
        },
        {
            "source": "/auth/(.*)",
            "destination": "/src/server.js"
        },
        {
            "source": "/(.*)",
            "destination": "/public/$1"
        }
    ]
}